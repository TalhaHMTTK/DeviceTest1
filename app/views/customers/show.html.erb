<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2>Customer Details</h2>
        </div>
        <div class="card-body">
          <p>
            <strong>Name:</strong>
            <%= @customer.name %>
          </p>
          <p>
            <strong>Contact Details:</strong>
            <%= @customer.phone %>
          </p>
          <p>
            <strong>Address:</strong>
            <%= @customer.address %>
          </p>
          <p>
            <strong>Joinning Date:</strong>
            <%= @customer.created_at.strftime("%B %d, %Y %H:%M") %>
          </p>
          <p>
            <strong>Last Time Info Updated:</strong>
            <%= @customer.updated_at.strftime("%B %d, %Y %H:%M") %>
          </p>
        </div>
        <div class="text-center">
           <%= link_to "Edit", edit_customer_path(@customer), class: "btn btn-primary" %>
        </div>
      </div>
      <div class="text-center">
          <%= button_to "All Customers", customers_path, method: :get, class: "btn btn-primary", params:  {user_id: @user.id } %>
      </div>
    </div>
      <div class="text-center">
          <%= button_to "Your Locations", locations_path, method: :get, class: "btn btn-info", params:  {customer_id: @customer.id } %>
      </div>
  </div>
</div>
