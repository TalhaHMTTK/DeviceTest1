<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2>New Device</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @device, local: true, class: "form-horizontal") do |form| %>
            <div class="form-group row">
              <%= form.label :name, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= form.text_field :name, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :company_name, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= form.text_field :company_name, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :model, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= form.select :model, options_for_select(Device.models.keys.map { |k| [k.humanize.capitalize, k] }, @device.model), class: "form-control" %>
              </div>
            </div>

            <%= form.hidden_field :location_id, value: @location.id %>
            <%= form.hidden_field :company_id, value: @company.id %>

            <div class="form-group row mt-3">
              <div class="col-sm-10 offset-sm-2">
                <%= form.submit 'Create Device', class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
