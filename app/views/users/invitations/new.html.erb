<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0"><%= t "devise.invitations.new.header" %></h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post, class: 'mb-3' }) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>

            <% resource.class.invite_key_fields.each do |field| %>
              <div class="mb-3">
                <%= f.label field, class: 'form-label' %>
                <%= f.text_field field, class: 'form-control' %>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :role, class: 'form-label' %>
              <%= f.select :role, options_for_select([['Tester', 'tester'], ['Admin', 'admin']]), { prompt: 'Select Role' }, { class: 'form-select' } %>
            </div>

            <%= f.hidden_field :company_id, value: @company_id %>

            <div class="d-grid">
              <%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
