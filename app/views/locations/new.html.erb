<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2>New Location</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @location, local: true, class: "form-horizontal") do |form| %>
            <div class="form-group row">
              <%= form.label :name, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= form.text_field :name, class: "form-control" %>
              </div>
            </div>

            <%= form.hidden_field :customer_id, value: @customer.id %>
            <%= form.hidden_field :company_id, value: current_user.company_id %>

            <div class="form-group row mt-3">
              <div class="col-sm-10 offset-sm-2">
                <%= form.submit 'Create Location', class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
