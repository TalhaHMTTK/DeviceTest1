<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0">Locations</h2>
        </div>
        <div class="card-body">
          <table class="table table-hover">
            <thead class="table-light">
              <tr>
                <th>Location Name </th>
                <th>Links</th>
                <th class="text-end">Place Added at</th>
              </tr>
            </thead>
            <tbody>
              <% @locations.each do |location| %>
                <tr>
                  <td><%= location.name %></td>
                  <td>
                    <div class="d-flex">
                      <%= button_to "Show", location_path(location), method: :get, class: "btn btn-info me-1", params: { customer_id: @customer.id } %>
                      <%= link_to "Edit", edit_location_path(location), class: "btn btn-primary me-1" %>
                      <%= button_to "Delete", location_path(location), method: :delete, class: "btn btn-danger", params: { customer_id: @customer.id } %>
                    </div>
                  </td>
                  <td class="text-end"><%= location.created_at.strftime("%B %d, %Y %H:%M") %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="text-center">
            <%= button_to "Add Location", new_location_path, method: :get, class: "btn btn-primary", params:  {customer_id: @customer.id, company_id: @customer.company_id } %>
        </div>
      </div>
    </div>
  </div>
</div>
